---
import config from "../../config.mjs"
import SocialIcon from "./SocialIcon.astro"
---

<div class="gradient-line h-[1px] w-full overflow-hidden"></div>
<div
	class="bg-gradient-to-r from-pacamara-secondary/10 to-pacamara-accent/10 py-14 transition-all duration-300 dark:bg-gradient-to-r dark:from-pacamara-accent/[2%] dark:to-pacamara-secondary/[5%]"
>
	<footer
		class="container mx-auto flex max-w-screen-xl flex-initial flex-col items-center gap-10 px-7 lg:flex-row"
	>
		<div class="logo flex-none">
			<a
				href="/"
				class="font-pacamara-space text-lg font-bold transition-all duration-300 hover:text-pacamara-accent dark:text-white dark:hover:text-pacamara-accent"
				>Kue Mamah Arul</a
			>
		</div>

		<ul
			class="flex flex-initial list-none flex-row content-center items-center gap-x-[35px] text-[14px] font-normal"
		>
			<SocialIcon
				socialUrl={config?.social?.dribbble}
				socialType="dribbble"
			/>

			<SocialIcon
				socialUrl={config?.social?.facebook}
				socialType="facebook"
			/>

			<SocialIcon
				socialUrl={config?.social?.github}
				socialType="github"
			/>

			<SocialIcon
				socialUrl={config?.social?.instagram}
				socialType="instagram"
			/>

			<SocialIcon
				socialUrl={config?.social?.mastodon}
				socialType="mastodon"
			/>

			<SocialIcon
				socialUrl={config?.social?.pinterest}
				socialType="pinterest"
			/>

			<SocialIcon socialUrl={config?.social?.skype} socialType="skype" />

			<SocialIcon
				socialUrl={config?.social?.twitter}
				socialType="twitter"
			/>
		</ul>
		<div class="grow lg:text-right">
			<span
				class="text-[14px] text-pacamara-dark/40 transition-all duration-300 dark:text-pacamara-white/40"
			>
				made with <span class="text-pacamara-accent">&hearts;</span>
			</span>
		</div>
	</footer>
</div>
