---
const { postData, num } = Astro.props
import { Image } from "astro:assets"
import PublishDate from "./PublishDate.astro"
import Tag from "../general/Tag.astro"
// default image if no image added
import defaultImage from "../../assets/default.jpg"

const isOdd = num % 2
---

<article
	class="prose-p:text-pacamara-black/50 prose-a:hover:text-pacamara-pink group prose mb-10 max-w-none lg:prose-xl last:mb-0 prose-headings:font-pacamara-space prose-headings:font-bold prose-headings:text-pacamara-accent prose-h2:mb-7 prose-h2:mt-0 prose-p:transition-all prose-p:duration-300 prose-a:font-semibold prose-a:text-pacamara-dark prose-a:no-underline prose-a:transition-all prose-a:duration-300 prose-strong:font-normal prose-img:mb-0 prose-img:mt-0 dark:prose-p:text-white/50 dark:prose-a:text-white dark:prose-a:hover:text-pacamara-accent lg:mb-[50px] lg:prose-p:text-[18px]"
>
	<div
		class="grid grid-cols-1 items-center gap-10 md:grid-cols-[200px_auto] lg:grid-cols-[200px_auto]"
	>
		<div class="post_image">
			<a href={"/blog/" + postData.slug}>
				<Image
					src={postData?.data?.image
						? postData.data.image
						: defaultImage}
					width="750"
					alt={postData.title + "Thumbnail"}
					class:list={[
						"image-shine h-[200px] rounded-[15px] object-cover",
						{ "rotate-2": isOdd, "-rotate-2": !isOdd },
					]}
				/>
			</a>
		</div>
		<div class="post_intro">
			<h2>
				<a
					href={"/blog/" + postData.slug}
					class="text-pacamara-dark hover:text-pacamara-accent"
				>
					{postData.data.title}
				</a>
			</h2>

			<p>
				{postData.data.intro}
			</p>

			<p
				class="mt-5 flex flex-row flex-wrap items-center gap-5 group-last:mb-0"
			>
				<Tag tag={postData.data.tag} />
				<PublishDate date={postData.data.pubDate} />
			</p>
		</div>
	</div>

	<div
		class="gradient-line mt-10 h-[1px] w-full overflow-hidden group-last:hidden lg:mt-[50px]"
	>
	</div>
</article>
